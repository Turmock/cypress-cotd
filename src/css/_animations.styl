/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform translateX(-120%)
  transition all 0.5s ease-in-out;
  max-height 0
  padding 0!important
  &.order-enter-active
    max-height 60px
    padding 20px 0!important
    transform translateX(0)

.order-exit
  transform translateX(0)
  transition all 0.5s ease-in-out;
  &.order-exit-active
    transform translateX(-120%)
    padding 0!important

.count-enter
  transition all 0.5s ease-in-out;
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  transform translateY(0)
  transition 0.5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    transform translateY(-100%)
    transition 0.5s